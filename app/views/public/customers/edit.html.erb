<h2>プロフィール編集</h2>
  <%= form_with model: @customer do |f| %>
    <label for="inputImage">プロフィール画像</label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
    <label for ="inputName">名前</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
    <label for ="inputGender">性別</label>
    <%= f.text_field :genre, id:"inputGender", placeholder:"性別" %>
    <label for ="inputHeight">身長</label>
    <%= f.text_field :height, id:"inputheight", placeholder:"身長" %>
    <label for ="inputWeight">体重</label>
    <%= f.text_field :weight, id:"inputWeight", placeholder:"体重" %>
    <%= f.submit "変更を保存" %>
  <% end %>
    